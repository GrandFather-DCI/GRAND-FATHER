<Window x:Class="Xiangqi01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xiangqi01"
        mc:Ignorable="d"
        Title="XiangQi" Height="600" Width="527" >
    <Grid >
        
        <Grid.Background>
            <ImageBrush ImageSource="Resource/background.png"></ImageBrush>
        </Grid.Background>

        <TextBlock FontSize="56" HorizontalAlignment="Center" VerticalAlignment="Top"   Height="59" Width="468" Background="#FFF1D4A5" FontFamily="Sitka Text" FontWeight="Normal" Margin="0,32,0,0"><Run Language="zh-cn" Text=" CHINESS CHESS"/></TextBlock>

        <Button FontSize="35" Content="Start"  HorizontalAlignment="Center" VerticalAlignment="Center"  Click="Button_Start" Width="210" Height="55">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button FontSize="35" Content="Exit"  HorizontalAlignment="Center" VerticalAlignment="Top"  Click="Button_Exit" Width="210" Height="55" Margin="0,338,0,0">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>


